{{#* inline "overview"}}
    <form method="post" action="/system-health/services">
        <div class="input-group mb-3">
            <input type="text" name="service" class="form-control" placeholder="Search for a service..." aria-label="Search" aria-describedby="search">
            <div class="input-group-append">
                <button class="btn btn-outline-primary" type="submit" id="search">Button</button>
            </div>
        </div>
    </form>
    <div class="card mb-3">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Name</th>
                        <th>Enabled</th>
                        <th>Active Status</th>
                        <th>Uptime</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.service}}</td>
                        <td>{{this.name}}</td>
                        <td><span class="{{this.loaded}}"></span></td>
                        <td>{{this.active}}</td>
                        <td>{{this.uptime}}</td>
                    </tr>
                    {{/each}} 
                </tbody>
            </table>
        </div>
    </div>
{{/inline}}

