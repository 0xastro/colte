# create oai_test user and database
sudo mysql -e "CREATE DATABASE oai_test;"
sudo mysql -e "CREATE USER oai_test@localhost;"
sudo mysql -e "GRANT ALL PRIVILEGES ON oai_test.* TO oai_test@localhost;"
sudo mysql -e "FLUSH PRIVILEGES;"

# import test database
mysql -u oai_test oai_test < /tmp/oai/sample_db.sql

# create s6a certificate
/usr/local/etc/oai/freeDiameter/check_hss_s6a_certificate.sh /usr/local/etc/oai/freeDiameter hss.OpenAir5G.Alliance

sudo systemctl daemon-reload

echo "Installed OpenAirInterface HSS"